{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es2017",
        "baseUrl": "./",
        "rootDirs": [
            "src",
            "../common"
        ],
        "paths": {
            "@client:common/*": [
                "src/app/common/*"
            ],
            "@project:common/*": [
                "../common/*"
            ]
        },
        "lib": [
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}