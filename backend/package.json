        "@types/express": "^4.17.2",
        "@types/node": "^10.16.1",
        "@types/socket.io": "^2.1.4",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/eslint-plugin-tslint": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "eslint": "^7.4.0",
        "husky": "^4.2.5",
        "nodemon": "^2.0.4",
        "tslint": "^6.1.2",
        "typescript": "^3.9.6"
